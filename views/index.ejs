<%- include("partials/header.ejs") %>

<div class="box">
    <div class="box-div">
        <h1> <%= heading %> </h1>
    </div>
        <div class="row">
            <input type="text" id="input-task" autofocus placeholder="Write your task here"> 
            <button onclick="addTask()" id="btn-add"><i class="fa-solid fa-pencil"></i>ADD</button>
        </div>
        <div id="div2">
        <div class="row page">
            <!-- <h3>Task per page</h3> -->
            <label for="pages">Task per page</label>
            <select name="pages" id="task-per-page">
                <% for(let i=1;i<=10;i++){ %>
                    <%if(i == 5){%>
                        <option value="5" selected>5</option>
                    <%}else{%>
                    <option value="<%=i%>"><%=i%></option>
                    <% } %>
                <% } %>
            </select>
        </div>
        <div class="row search-div">
            <input type="text" id="search-task" placeholder="Search Task...">
        </div>
        </div>
        <ul id="list-container">
        </ul>
        <div id="show-pages">
            <div id="showing-page-wise">
            </div>
            <div id="pagination">
            </div> 
        </div>
        <div id="found" class="hide">
        </div>
        <div id="progress-div">
            <span> Task completed : <strong id="task-completed"></strong> </span><progress id="progress-bar" value="10" max="100"></progress>
        </div>
    </div>
    
<%- include("partials/footer.ejs") %>